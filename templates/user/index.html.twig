{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

<section id="nav-admin">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container">
            <a class="navbar-brand" href="{{ path('admin') }}">
                <p class="admin-brand">Page<span>Administrateur</span></p>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav  ms-auto">
                    <a class="nav-link" href="{{ path('user_index') }}">Utilisateurs</a>

                    <a class="nav-link" href="{{ path('articles_index') }}">Articles</a>

                    <a class="nav-link" href="{{ path('sport_index') }}">Sport</a>
                </div>
            </div>
    </nav>
</section>
<section id="affich">
    <h1 class="h1-admin">User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>NomUser</th>
                <th>PrenomUser</th>
                <th>TelUser</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nomUser }}</td>
                <td>{{ user.prenomUser }}</td>
                <td>{{ user.telUser }}</td>
                <td><img src="{{ asset('uploads/photos/' ~ user.photo) }}" width="100"></td>
                <td>
                    <a class="voir" href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a class="modif" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</section>

{% endblock %}