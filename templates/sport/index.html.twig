{% extends 'base.html.twig' %}

{% block title %}Sport index{% endblock %}

{% block body %}

<section id="nav-admin">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container">
            <a class="navbar-brand" href="{{ path('admin') }}">
                <p class="admin-brand">Page<span>Administrateur</span></p>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav  ms-auto">
                    <a class="nav-link" href="{{ path('user_index') }}">Utilisateurs</a>

                    <a class="nav-link" href="{{ path('articles_index') }}">Articles</a>

                    <a class="nav-link" href="{{ path('sport_index') }}">Sport</a>
                </div>
            </div>
    </nav>
</section>

<section id="affich">
    <h1 class="h1-admin">Sport index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sport</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for sport in sports %}
            <tr>
                <td>{{ sport.id }}</td>
                <td>{{ sport.nomSport }}</td>
                <td>
                    <a class="voir" href="{{ path('sport_show', {'id': sport.id}) }}">Voir</a>
                    <a class="modif" href="{{ path('sport_edit', {'id': sport.id}) }}">Modifier</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</section>

<a class="valid-btn" href="{{ path('sport_new') }}">Cr√©er nouvel utilisateur</a>
{% endblock %}