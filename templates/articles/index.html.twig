{% extends 'base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
<section id="nav-admin">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container">
            <a class="navbar-brand" href="{{ path('admin') }}">
                <p class="admin-brand">Page<span>Administrateur</span></p>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav  ms-auto">
                    <a class="nav-link" href="{{ path('user_index') }}">Utilisateurs</a>

                    <a class="nav-link" href="{{ path('articles_index') }}">Articles</a>

                    <a class="nav-link" href="{{ path('sport_index') }}">Sport</a>
                </div>
            </div>
    </nav>
</section>

<section id="affich">

    <h1 class="h1-admin">Articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Corps de texte</th>
                <th>Date</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titleArticle }}</td>
                <td>{{ article.textArticle|raw }}</td>  // |raw Actionne les balises html
                <td>{{ article.dateArticle|date }}</td>
                <td><img src="{{ asset('uploads/photos/' ~ article.photoArticle) }}" width="100"></td>
                <td>
                    <a class="voir" href="{{ path('articles_show', {'id': article.id}) }}">Voir</a>
                    <a class="modif" href="{{ path('articles_edit', {'id': article.id}) }}">Modifier</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a class="valid-btn" href="{{ path('articles_new') }}">Create new</a>
</section>
{% endblock %}