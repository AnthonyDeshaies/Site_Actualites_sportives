{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}


{% block body %}
    <h1>Inscrivez-vous</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, { label: 'email'}) }}
        {{ form_row(registrationForm.nomUser, { label: 'Nom'}) }}
        {{ form_row(registrationForm.prenomUser, { label: 'Prénom'}) }}
        {{ form_row(registrationForm.telUser, { label: 'Numéro de téléphone'}) }}
        {{ form_row(registrationForm.photo, { label: 'Chargez une photo'}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
